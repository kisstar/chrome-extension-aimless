{
  "name": "chrome-extension-aimless",
  "version": "0.0.0",
  "description": "A highly scalable and multifunctional browser extension.",
  "type": "module",
  "private": true,
  "scripts": {
    "dev:core": "pnpm --filter chrome-extension-aimless dev",
    "dev:ms": "node build/vite.build.mjs --watch",
    "dev:test": "pnpm --filter chrome-extension-aimless dev:test",
    "build:core": "pnpm --filter chrome-extension-aimless build",
    "build:ms": "node build/vite.build.mjs",
    "commit": "git-cz",
    "lint": "eslint",
    "stylelint": "stylelint packages/**/*.css --ignore-path .gitignore",
    "prepare": "husky"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.6.0",
    "@commitlint/config-conventional": "^19.6.0",
    "@commitlint/cz-commitlint": "^19.5.0",
    "@types/chrome": "^0.0.280",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@typescript-eslint/eslint-plugin": "^8.18.0",
    "@typescript-eslint/parser": "^8.18.0",
    "@wxt-dev/module-react": "^1.1.1",
    "commitizen": "^4.3.1",
    "eslint": "^9.16.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.16",
    "globals": "^15.13.0",
    "husky": "^9.1.7",
    "inquirer": "9",
    "lint-staged": "^15.2.11",
    "prettier": "^3.4.2",
    "sass-embedded": "^1.83.0",
    "stylelint": "^16.11.0",
    "stylelint-config-standard": "^36.0.1",
    "stylelint-prettier": "^5.0.2",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.18.0",
    "vite": "^6.0.3",
    "wxt": "^0.19.13"
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  },
  "license": "MIT"
}
