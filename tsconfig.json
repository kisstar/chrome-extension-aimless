{
  "compilerOptions": {
    "moduleResolution": "Node",
    "module": "esnext",
    "target": "es6",
    "noImplicitAny": false,
    "sourceMap": false,
    "rootDir": ".",
    "outDir": "dist/js",
    "baseUrl": ".",
    "paths": {
      "@utils": ["src/utils"],
      "@utils/*": ["src/utils/*"]
    },
    "noEmitOnError": true,
    "typeRoots": ["node_modules/@types"]
  },
  "include": ["src/**/*", "types/**/*"]
}
